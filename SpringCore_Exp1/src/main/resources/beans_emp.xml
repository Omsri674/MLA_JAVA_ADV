<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="emp1" class="com.test.Employee">

		<property name="id" value="101"></property>
		<property name="name" value="Eswar"></property>
		
		<property name="loc" value="Erode"></property>

	</bean>

	<bean id="emp2" class="com.test.Employee">

		<constructor-arg name="id" value="102"></constructor-arg>
		<constructor-arg name="name" value="Tharun"></constructor-arg>
		<constructor-arg name="dept" value="Developer"></constructor-arg>
 		<constructor-arg name="loc" value="Salem"></constructor-arg>  
		
	</bean>

</beans> 

 